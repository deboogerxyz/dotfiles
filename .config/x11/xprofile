#!/bin/sh

xwallpaper --center ${XDG_DATA_HOME:-$HOME/.local/share/}/bg &
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources 2>/dev/null
picom --experimental-backends &
xset r rate 300 50 &
unclutter &

pidof -s runit &&
	! pidof -s pulseaudio >/dev/null 2>&1 &&
	setsid -f pulseaudio --start --exit-idle-time=-1 >/dev/null 2>&1
